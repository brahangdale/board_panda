<%= form_for @post  do  |f| %>
	
	<div class="row">
		<div class="col-xs-12">
			<% if @post.errors.any? %>
				<h2>The following errors prevented the post from getting created</h2>
				<ul>
					<% @post.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-8">
			<div class="form-group">
				<%= f.text_field :name, class: "form-control", placeholder: "Post Title", autofocus: true %>
			</div>
			<div class="form-group">
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Title description" %>
			</div>
            
            
			<div class="form-group">
				<%= f.file_field :image %>
			</div>

			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-lg" %>				
			</div>
		</div>
		<div class="col-xs-4">
			<div class="form-group">
				<%= f.select :category_id, options_for_select(Category.all.map { |category| [category.title, category.id]}), {prompt: 'Choose Category'}, class: "form-control" %><br>
				
			</div>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-xs-12">
		[<%= link_to 'Cancle request return to post ',  new_post_path %>] 
	</div>
</div>
